#eval "$(oh-my-posh init zsh --config ~/.config/oh-my-posh/lookgood.omp.json)"

export STARSHIP_CONFIG=~/.config/starship/lookgood.toml

eval "$(starship init zsh)"

alias cl="clear"

alias ls="exa"

alias cat="bat -pp"

alias vim="nvim"

alias vi="nvim"

chpwd() {
  ls
}

# https://armno.in.th/blog/fzf-history/
fh() {
  print -z $( ([ -n "$ZSH_NAME" ] && history -100) | fzf --tac --no-sort | sed -E 's/ *[0-9]*\*? *//' | sed -E 's/\\/\\\\/g')
}
